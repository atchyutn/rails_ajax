<%= form_for @teacher, remote: true,  :html => {:class => "form-horizontal centre"} do |f| %>
  <div class="container">
    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :name, class: "control-label" %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-2">
        <%= f.label :subject, class: "control-label" %>
      </div>
      <div class="col-md-10">
        <%= f.text_field :subject, class: "form-control" %>
      </div>
    </div>
    <%= f.submit "Save", class: "btn btn-success pull-right" %>
  </div>
<% end %>